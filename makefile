#  ______ _
# |  ____| |
# | |__  | | __ _  __ _ ___
# |  __| | |/ _` |/ _` / __|
# | |    | | (_| | (_| \__ \
# |_|    |_|\__,_|\__, |___/
#                  __/ |
#                 |___/

CXXFLAGS = -std=c++17

LDFLAG = $(CXXFLAGS) -lncurses

#  _____      _   _
# |  __ \    | | | |
# | |__) |_ _| |_| |__  ___
# |  ___/ _` | __| '_ \/ __|
# | |  | (_| | |_| | | \__ \
# |_|   \__,_|\__|_| |_|___/

ccsrc = $(wildcard */*.cpp)
obj = $(ccsrc:.cpp=.o)

#   _____                      _ _
#  / ____|                    (_) |
# | |     ___  _ __ ___  _ __  _| | ___ _ __
# | |    / _ \| '_ ` _ \| '_ \| | |/ _ \ '__|
# | |___| (_) | | | | | | |_) | | |  __/ |
#  \_____\___/|_| |_| |_| .__/|_|_|\___|_|
#                       | |
#                       |_|

CXX = g++
EXEC = bin/toolbox
RM = rm

#  __  __
# |  \/  |
# | \  / | __ _  ___ _ __ ___  ___
# | |\/| |/ _` |/ __| '__/ _ \/ __|
# | |  | | (_| | (__| | | (_) \__ \
# |_|  |_|\__,_|\___|_|  \___/|___/

all: $(EXEC)

$(EXEC): $(obj)
	$(CXX) $(LDFLAG) -o $@ $^

%.o: %.c
	$(CXX) $(CXXFLAGS) -o $@ -c $<

.PHONY: clean

clean:
		rm -f $(obj) $(exe)
